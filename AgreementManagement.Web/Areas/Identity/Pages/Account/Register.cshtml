@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center pt-5">
    <div class="col-md-4">
        <div class="card bg-mvp-darker">
            <div class="card-body">
                <p class="h1 text-mvp-light">@ViewData["Title"]</p>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <p class="h5 text-mvp-lighter border-bottom pb-3">Create a new account.</p>

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group text-mvp-light">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-mvp-light">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-mvp-light">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-light btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
