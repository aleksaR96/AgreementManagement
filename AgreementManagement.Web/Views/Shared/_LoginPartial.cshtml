@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="dropdown nav-link text-mvp-light">
                <a class="dropdown-toggle" data-toggle="dropdown">
                    <i class='far fa-user-circle'></i> User
                </a>
                <div class="dropdown-menu dropdown-menu-left">
                    <a class="dropdown-item small px-3" id="profile" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a>
                    <a class="dropdown-item small px-3" id="change-password" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Password</a>
                    @if (hasExternalLogins)
                    {
                        <a id="external-login" class="dropdown-item small px-3" asp-area="Identity" asp-page="/Account/Manage/ExternalLogins">External logins</a>
                    }
                    <a class="dropdown-item small px-3" id="two-factor" asp-area="Identity" asp-page="/Account/Manage/TwoFactorAuthentication">Two-factor authentication</a>
                    <a class="dropdown-item small px-3" id="personal-data" asp-area="Identity" asp-page="/Account/Manage/PersonalData">Personal data</a>
                </div>
            </div>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-mvp">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-mvp" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-mvp" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>